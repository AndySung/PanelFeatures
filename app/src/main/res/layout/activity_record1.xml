<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/titlebar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_voice_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_40"
            android:layout_weight="1"
            android:src="@drawable/mic_default" />

        <Chronometer
            android:id="@+id/com_voice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="40sp" />
        <com.soft.nortek.demo.recordmanage.AudioView
            android:id="@+id/audioView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态：%s"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSoundSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="声音大小：%s"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <ImageButton
                    android:id="@+id/bt_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/record_recording_btn" />
                <ImageButton
                    android:id="@+id/bt_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/record_stop_btn"
                    android:layout_marginLeft="@dimen/padding_60" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play_start_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_base_fillet_border_bg"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/play_stop_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_base_fillet_border_bg"
                android:text="@string/stop"
                android:textAllCaps="false"
                android:textColor="@color/selector_text_color"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
